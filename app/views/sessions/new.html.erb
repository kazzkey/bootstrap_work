<h1>Log in</h1>

<div class="container">
  <div class="card p-4 m-4">
    <%= form_with(scope: :session, url: sessions_path, local: true) do |f| %>
      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email %>
      </div>
      <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password %>
      </div>
      <div class="actions">
        <%= f.submit "Log in" %>
      </div>
    <% end %>
  </div>
  <br>
  <div class="">
    <%= link_to "サインアップ", new_user_path %>
  </div>
</div>
